{
  "name": "Wordable - Learn while you translate!",
  "description": "A Chrome Extension that keeps track of what you translate and helps you learn those words.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Open the popup"
  },
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "storage"
 ],
 "content_scripts": [
  {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"]
  }
]
}